.accordion {
  &-group {
    .title {
      font-size: 24px
      font-weight: 700
      margin-bottom: 20px
      &:not(:first-child) {
        margin-top: 40px
      }
    }
  }
  .accordion-item {
    border none
    outline none

    .accordion-button{
      font-size: 20px;
      font-weight: 500;
      line-height: 24px;
      color var(--color-black--primary)
      padding: 24px 0
      background-color: transparent
      &:focus{
        box-shadow: none;
      }
      &:not(.collapsed) {
        background-color: unset
        outline: none;
        box-shadow none
        &:after {
          background: var(--color-grey-light) url("../../images/icons/MinusCircle.svg") no-repeat
          background-size: cover;
          transform rotate(0)
        }
      }
      &:after {
        content: "";
        border-radius 50%
        background: var(--color-grey-light) url("../../images/icons/PlusCircle.svg") no-repeat
        width: 30px;
        height: 30px;
        background-size: cover;
        transform rotate(-90deg)
      }


    }
    .accordion-body {
      padding: 0
      font-size: 16px;
      font-weight: 400;
      line-height: 26px;
      color: var(--color-graphite)
    }
    &:last-child {
      .accordion-collapse{
        margin-bottom: 24px
      }
    }
  }
  &.accordion-card {
    .accordion-item {
      background-color: car(--color-white)
      margin-bottom: 20px
      padding:0 30px
      border-radius: 10px;

      .accordion-body {
        padding-bottom: 20px
      }
    }
  }
}
