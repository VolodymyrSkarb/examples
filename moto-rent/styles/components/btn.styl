.btn {
  --bs-border-radius: 30px;
  display: inline-flex;
  align-items: center;
  min-height: 50px;
  line-height: 1.24;
  font-weight: 300;
  letter-spacing: -0.48px;
  padding-left: 30px
  padding-right: 30px

  &.btn-outline-secondary {
    --bs-btn-bg transparent
    --bs-btn-color: var(--color-black);
    --bs-btn-border-color: var(--color-black);
    --bs-btn-hover-bg: var(--color-grey-light);
    --bs-btn-hover-border-color: var(--color-black);
    --bs-btn-active-bg: var(--color-white);
    --bs-btn-active-border-color: var(--color-black);
    --bs-btn-active-color: var(--color-dark);
    --bs-btn-hover-color var(--color-dark);
  }

  &.btn-primary {
    --bs-btn-color: #fff;
    --bs-btn-bg: var(--color-black);
    --bs-btn-border-color: var(--color-black);
    --bs-btn-hover-color: #fff;
    --bs-btn-hover-bg: var(--color-dark);
    --bs-btn-hover-border-color: var(--color-dark);
    --bs-btn-focus-shadow-rgb: 49, 132, 253;
    --bs-btn-active-color: #fff;
    --bs-btn-active-bg: var(--color-dark);
    --bs-btn-active-border-color: var(--color-dark);
    --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
    --bs-btn-disabled-color: #fff;
    --bs-btn-disabled-bg: var(--color-graphite);
    --bs-btn-disabled-border-color: var(--color-graphite);
    &:disabled {
      --bs-btn-disabled-bg rgba(41, 45, 50, 0.44)
      border unset
    }
  }

  &.lg-btn {
    padding: 0px 95px;
  }
}

  .link {
    color: var(--color-graphite);
    font-size: 14px;
    font-weight: 500;
    line-height: 150%;
    letter-spacing: -0.28px;
    text-decoration none
    &:hover {
      color: var(--color-graphite);
      opacity 0.8
    }
  }
