.footer {
  background-color: var(--color-white)
  .wrap {
    display: flex
    flex-direction column
  }

  .content {
    display: flex
    padding: 50px 0 42px
    @media (max-width $sm) {
      flex-direction column
    }

    .navbar-nav {
      max-height: 144px;
      display: flex;
      flex-wrap: wrap;
      column-gap: 60px;
      @media (max-width $sm) {
        column-gap: unset;
        margin-bottom: 24px
        width: 100%
      }
    }

    .content-media {
      display: flex
      align-items flex-end
      column-gap: 50px;
      padding-bottom: 8px
      @media (max-width $sm) {
        justify-content: space-between;
      }

      .social {
        display: flex
        column-gap: 20px;
      }
    }
  }

  .copyright {
    padding: 36px 0 40px
    border-top 1px solid var(--color-grey)
    color: var(--color-dark);
    font-size: 14px;
    font-weight: 300;
    letter-spacing: -0.42px;
  }
}
