.form-control,.form-select {
  outline none
  --bs-body-bg transparent
  --bs-body-color var(--color-dark)
  --bs-secondary-color var(--color-graphite)
  border-radius 10px
  padding: 15px 20px

  &.user-info {
    width: auto;
    padding: 0.375rem 0.75rem;
  }

  &:focus {
    box-shadow none
    border-color var(--color-black--primary)
  }
}
  .form-label {
    margin-bottom: 12px
    color: var(--color-dark);
    font-size: 16px;
    font-style: normal;
  }

.section_contact-us {
  .form-control {
    outline none
    --bs-body-bg transparent
    --bs-body-color var(--color-dark)
    --bs-secondary-color var(--color-graphite)
    border none
    border-bottom 1px solid var(--color-graphite)
    border-radius 0
    padding: 12px 0

    &:focus {
      box-shadow none
      border-color var(--color-black--primary)
    }
  }
}
  .input-group {
    .form-control,.input-group-text {
      margin: 0
    }
    .input-group-text {
      --bs-tertiary-bg transparent
      --bs-border-color #dee2e6
    }
  }

input[type=number] {
  -moz-appearance: textfield;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

.dp__main {
  .dp__theme_light {
    --dp-hover-color: #F0F5FF;
  }
  .dp__menu {
    border unset
    background: none
  }

  .dp__action_row {
    padding: 0
    display: flex
    justify-content flex-end
  }

  .dp__instance_calendar {
    background-color: var(--color-white)
    font-family: "Plus Jakarta Sans";
    padding: 16px;
    margin-bottom: 8px
    border-radius: 5px;
    border: 1px solid var(--bs-border-color);

    .dp__menu_inner {
      padding: 0
    }

    .dp--header-wrap {
      margin-bottom: 8px

      .dp__month_year_wrap {
        display: flex;
        justify-content: center;
        width: unset
        color: var(--Gray-900, #061C3D);
        text-align: center;
        font-style: normal;
        font-weight: 400;
        line-height: 24px;
        font-size 16px
      }

      .dp__btn {
        &.dp--arrow-btn-nav {
          padding: 0;
          margin: 0 24px;

          .dp__inner_nav {
            border-radius 0
          }
        }
      }
    }

    .dp__calendar {
      .dp__calendar_header_separator {
        display: none
      }

      .dp__calendar_header {
        color: var(--Gray-300, #B4BBC5);
        font-size 18px
        font-weight: 500;
        letter-spacing: 0.24px;
        text-transform: uppercase;
      }

      .dp__calendar_row {
        display: grid;
        grid-auto-columns: minmax(0, 1fr);
        grid-auto-flow: column;
        font-size: 23px;

        .dp__cell_inner {
          --dp-cell-size: 40px;
          width: 100%
        }
      }

      .dp__calendar_item {
        display: flex;
        justify-content: center;
        color: var(--Gray-700, #42526B);
        font-size 16px
        font-weight: 500;
        --dp-primary-color: var(--color-black--primary)
        --dp-range-between-dates-background-color: var(--dp-hover-color)

        .dp__cell_inner {
          border unset
        }
      }
    }
  }

  .dp__outer_menu_wrap.dp--menu-wrapper {
    z-index: 5

    .dp__menu_index {
      border unset !important
    }
  }
}
