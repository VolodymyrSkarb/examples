.home-page {
  .container-navbar {
    display: none

    .navbar_main {
    }
  }
}

.navbar {
  background-color: var(--color-grey-light)
  position sticky
  top 0
  box-shadow: 0 0 16px -4px rgba(0, 0, 0, 0.5);
  z-index: 100;

  .navbar-brand {
    margin-left: auto
    margin-right: 0
  }

  .social {
    display: none
  }

  @media (max-width $lg) {
    .navbar-collapse {
      position: fixed;
      left: 0;
      top: 0;
      bottom: 0;
      width: 320px !important;
      padding: 120px 10px 40px 100px;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(7.5px);
      z-index: 10;
      transition: all ease .5s;
      min-height: 120vh;

      @media (max-width $lg) {
        left: -320px
      }

      &.collapse {
        &:not(.show) {
          display: flex
          flex-direction column
        }
      }

      &.show {
        left: 0
      }

      &.collapsing {
        height: unset !important
        overflow unset
      }

      .navbar-nav {
        .nav-item {
          color: var(--color-white);
          font-size: 20px;
          font-weight: 300;
          line-height: 1.5;
          letter-spacing: -0.6px;

          .nav-link {
            padding: 10px 0
            color: var(--color-white);
          }
        }
      }

      .social {
        display: flex
        margin-top: 60px
        --color-icon var(--color-white)
        margin-right: auto;
      }

      .navbar-toggler {
        --color-icon var(--color-white)
        position absolute
        right: 24px
        top: 32px

        &:hover {
          opacity .8
        }
      }
    }

    .navbar-toggler {
      box-shadow: none;
      padding: 0
      border none
    }
  }
}
