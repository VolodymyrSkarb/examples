.reviews-section, .section_reviews {
  background-color: var(--color-grey-light);
  padding: 60px 0px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

  .container {
    position: relative;
  }

  .swiper-container {
    overflow: hidden;
  }

  .review-card {
    background-color: white;
    border-radius: 8px;
    padding: 20px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 300px;
    height: auto;
    flex-grow: 1;
    cursor: pointer;

    @media screen and (min-width: 768px) {
      max-width: 395px;
    }
  }
}

#vehicleRent {
  .section_reviews {
    padding-top: 10px;
  }
}

.reviews {
  text-align: center;
  padding: 40px 20px;
}

.reviews-title {
  font-size: 2rem;
  font-weight: 600;
  padding-bottom: 50px;
  text-align: center;
}

.swiper-wrapper {
  display: flex;
}

.swiper-slide {
  display: flex;
  justify-content: center;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 10px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.2rem;
  object-fit: cover;
}

.name {
  font-size: 1rem;
  font-weight: 600;
  margin: 0;
}

.stars {
  font-size: 1.2rem;
  color: gold;
  margin-top: 5px;
}

.review-text {
  font-size: 0.9rem;
  color: #555;
  margin: 15px 0;
  flex-grow: 1;
  display: -webkit-box;
  -webkit-line-clamp: 9;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.published-date {
  font-size: 0.8rem;
  color: #aaa;
  margin-top: 10px;
}

.reviews-section, .section_reviews {
  .swiper-button-next,
  .swiper-button-prev {
    position: absolute;
    top: 42px;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 2px solid #292D32;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
    display: none;

    @media screen and (min-width: 768px) {
      display: flex;
    }
  }

  .swiper-button-next:after,
  .swiper-button-prev:after {
    color: #292D32;
    font-size: 27px;
    position: relative;
  }

  .swiper-button-prev:after {
    left: -2px;
  }

  .swiper-button-next:after {
    left: 2px;
  }

  .swiper-button-prev{
    right: 75px;
    left: auto;
  }

  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    opacity: 0.8;
  }
}
