.modal-content {
  padding: 1rem;
}

.modal-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.rating {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.star {
  font-size: 2rem;
  cursor: pointer;
  color: #ccc;
}

.star-filled {
  color: #ffc107;
}

.review-input {
  width: 100%;
  height: 100px;
  margin-top: 1rem;
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 5px;
  resize: none;
}

.submit-button {
  display: block;
  width: 100%;
  background-color: #000;
  color: #fff;
  padding: 0.5rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 1rem;
  font-size: 1rem;

  &:hover {
    background-color: #333;
  }
}

.modal.fade.review-modal {
  background-color: rgba(217, 217, 217, 0.6);
}

.review-modal {
  height: 120vh;
  top: -10vh;

  .modal-header {
    border-bottom: none;
    padding: 0;
    .btn-link {
      position: absolute;
      top: -5px;
      right: 5px;
      padding: 0;
      z-index: 10;
      .icon {
        width: 25px;
        height: 25px;
      }
    }
  }

  .modal-title {
    text-align: left;
    padding-bottom: 30px;
  }

  .modal-body {
    padding: 20px 0px;

    h3{
      padding: 10px 0;
      font-size: 20px;
      font-weight: 600;
      line-height: 27.5px;
      letter-spacing: -0.33px;
    }

    .reviews-comment-block {
      padding-bottom: 65px
    }
  }

  .modal-footer {
    border: none;
    position: absolute;
    bottom: 30px;
    left: 0;
    right: 0;
    width: calc(100% - 65px);
    margin: auto;

    button {
      padding: 15px;
      font-weight: 600;
      font-size: 16px;
    }
  }

  .form-error {
    color: red;
    font-size: 12px;
    margin-top: 5px;
  }

}

.modal-dialog-simple {
  .review-card {
    width: auto;
    max-width: 100%;
  }
}
