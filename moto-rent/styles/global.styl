* {
  box-sizing: border-box;
  -webkit-scroll-behavior: smooth;
  -moz-scroll-behavior: smooth;
  -ms-scroll-behavior: smooth;
  scroll-behavior: smooth;
}

:root {
  font-family: sans-serif;
  font-size: var(--font-size--default);
  cursor: default;
}

html {
  scroll-behavior: smooth;
}

img {
  max-width: 100%;
}

.home-page {
  .accordion-group {
    .title {
      display: none
    }

    .accordion {
      &:not(:first-of-type) {
        display: none
      }

      .accordion-item {
        &:not(:nth-child(-n+5)) {
          display: none
        }
      }
    }
  }
}

.icon {
  width: 36px
  height: 36px

  &-sprite {
    display: none
  }
}

a {
  &:hover {
    .icon {
      opacity .7
    }
  }
}

.social {
  display: flex
  column-gap: 20px;
}

.alert {
  position fixed;
  z-index: 101;
  top: 20px;
  right: 20px;
}

.upload-picture-box {
  .modal-header {
    justify-content flex-end
  }

  .modal {
    width: 100% !important
  }

  .btn-link {
    padding: 0
    margin-left: auto
  }
}

.badge {
  display: inline-flex
  align-items center
  padding: 8px 10px
  font-size: 18px;
  font-weight: 500;
  letter-spacing: -0.54px;
  border-radius: 8px;
  margin-bottom: 10px

  .icon {
    width: 16px
    height: 18px
    --color-icon: var(--color-yellow);
    margin-right: 6px
  }

  &-info {
    background-color: var(--color-yellow-light)
    color: var(--color-black);
  }
}

._border-radius {
  border-radius var(--bs-card-inner-border-radius)
}

.btn-close:focus {
  box-shadow none
}

.modal-temp-vehicle {
  .modal-header {
    padding: 12px 16px 8px 40px

    .modal-title {
      font-size 32px
    }
  }
}

.no-scroll {
  overflow: hidden;
}

.modal-body {
  padding: 8px 40px

  .content-box {
    margin-bottom: 16px
    h4 {
      font-size: 20px;
      font-weight: 500;
      letter-spacing: -0.4px;
      margin-bottom: 10px;
    }
    h3 {
      font-size: 24px;
      font-weight: 600;
      letter-spacing: -0.4px;
    }
    span {
      color: var(--color-graphite);
      line-height: 1.2

    }
  }
}

.modal-footer {
  padding: 0 40px 20px
}
